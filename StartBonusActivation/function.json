{
  "bindings": [
    {
      "authLevel": "function",
      "name": "req",
      "type": "httpTrigger",
      "direction": "in",
      "route": "api/v1/bonus/vacanze/activations/{fiscalcode}",
      "methods": ["post"]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "name": "starter",
      "type": "durableClient",
      "direction": "in"
    },
    {
      "type": "queue",
      "direction": "out",
      "name": "bonusActivation",
      "queueName": "bonusactivations",
      "connection": "BONUS_STORAGE_CONNECTION_STRING"
    },
    {
      "type": "cosmosDB",
      "name": "processingBonusIdIn",
      "databaseName": "%COSMOSDB_BONUS_DATABASE_NAME%",
      "collectionName": "bonus-processing",
      "connectionStringSetting": "COSMOSDB_CONNECTION_STRING",
      "direction": "in",
      "Id": "{fiscalcode}",
      "PartitionKey": "{fiscalcode}"
    },
    {
      "type": "cosmosDB",
      "name": "processingBonusIdOut",
      "databaseName": "%COSMOSDB_BONUS_DATABASE_NAME%",
      "createIfNotExists": false,
      "collectionName": "bonus-processing",
      "connectionStringSetting": "COSMOSDB_CONNECTION_STRING",
      "direction": "out"
    }
  ],
  "scriptFile": "../dist/StartBonusActivation/index.js"
}
